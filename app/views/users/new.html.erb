
<div class="form col-lg-3 white-text">
<h1 class="jumbotron">Sign up!</h1>
<%= form_for :user, url: '/users' do |f| %>
	<div class = "form-group">	
  Name: <%= f.text_field :username, class: "form-control white-text" %>
  </div>
	<div class = "form-group">  
  Email: <%= f.text_field :email, class: "form-control white-text" %>
  </div>
	<div class = "form-group">
  Password : <%= f.password_field :password, class: "form-control white-text" %>
  </div>
	<div class = "form-group">
  Password Confirmation :
  <%= f.password_field :password_confirmation, class: "form-control white-text" %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-default' %>

<% end %>
</div>