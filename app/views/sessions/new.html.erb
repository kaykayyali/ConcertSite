
<div class="form col-lg-3 white-text">
<h1 class="jumbotron black-text" style="border-radius:20px;">Login</h1>
	<%= form_tag '/login' do %> 
		<div class="form-group">
			Email <%= text_field_tag :email,nil, class: 'form-control' %>
		</div>
		<div class="form-group">
			
				Password <%= password_field_tag :password, nil, class: 'form-control' %>
		
		</div>
		<%= submit_tag "Submit", class: 'btn btn-primary' %>
	<% end %>
</div>

